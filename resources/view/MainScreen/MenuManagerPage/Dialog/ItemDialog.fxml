<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox fx:id="dialogRoot" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.MainScreen.MenuManagerPage.Dialog.ItemDialogController"
      stylesheets="@ItemDialog.css"
      spacing="12" styleClass="dialog-root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="%dia.add" />

    <Separator />

    <!-- Tên món -->
    <VBox spacing="4">
        <Label text="%dia.name" />
        <TextField fx:id="nameField" promptText="%dia.ex" />
    </VBox>

    <!-- Giá món -->
    <VBox spacing="4">
        <Label text="%dia.price" />
        <TextField fx:id="priceField" promptText="VD: 25000" />
    </VBox>

    <!-- Danh mục -->
    <VBox spacing="4">
        <Label text="%dia.danh" />
        <ChoiceBox fx:id="categoryChoice" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Drink" />
                    <String fx:value="Food" />
                </FXCollections>
            </items>
        </ChoiceBox>
    </VBox>

    <!-- Ảnh món -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <ImageView fx:id="imagePreview" fitWidth="100" fitHeight="100" preserveRatio="true" style="-fx-border-color: #E2E8F0; -fx-border-width: 1; -fx-background-color: #F8FAFC;" />
        <Button onAction="#onUploadImage" text="%dia.load" styleClass="primary-btn"/>
    </HBox>

    <Region VBox.vgrow="ALWAYS" />

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button onAction="#onCancel" text="%dia.cancel" styleClass="dialog-button cancel"/>
        <Button onAction="#onConfirm" text="%dia.confirm" styleClass="dialog-button confirm"/>
    </HBox>

</VBox>