<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="view.MenuManagerPage.MenuManagerController"
           prefWidth="1000" prefHeight="600">
    <!-- Nội dung chính -->
    <Pane fx:id="mainContent" style="-fx-background-color: #f0f0f0;">
        <Label text="Nội dung chính" layoutX="500" layoutY="180"/>
    </Pane>
    <!-- Menu VBox (ẩn ban đầu, overlay) -->
    <VBox fx:id="menuList" styleClass="menu-list-vbox"
          StackPane.alignment="TOP_LEFT">
        <padding>
            <Insets top="0" right="0" bottom="0" left="0"/>
        </padding>
        <Button text="Menu Item 1" styleClass="menu-item"/>
        <Button text="Menu Item 2" styleClass="menu-item"/>
        <Button text="Menu Item 3" styleClass="menu-item"/>
        <Button text="Menu Item 4" styleClass="menu-item"/>
        <Button text="Menu Item 5" styleClass="menu-item"/>
    </VBox>

    <!-- Nút hamburger đè góc trên trái -->
    <Button fx:id="menuButton" text="☰" styleClass="menu-button"
            StackPane.alignment="BOTTOM_LEFT">
        <StackPane.margin>
            <Insets top="0" left="10" right="0" bottom="10"/>
        </StackPane.margin>
    </Button>

</StackPane>
