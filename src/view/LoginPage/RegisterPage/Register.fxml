<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<VBox fx:controller="view.LoginPage.RegisterPage.RegisterController"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      spacing="18"
      styleClass="register-root">

    <padding>
        <Insets top="40" left="40" right="40" bottom="40"/>
    </padding>

    <!-- TIÊU ĐỀ -->
    <Label text="%re.title" styleClass="register-title"/>

    <!-- NHẬP TÊN -->
    <TextField fx:id="txtUsername"
               promptText="%re.username"
               styleClass="input-field"
               maxWidth="260"/>

    <!-- NHẬP MẬT KHẨU -->
    <PasswordField fx:id="txtPassword"
                   promptText="%re.password"
                   styleClass="input-field"
                   maxWidth="260"/>

    <!-- CHỌN QUYỀN -->
    <HBox alignment="CENTER_LEFT" spacing="10" maxWidth="260">
        <Label text="%re.role" styleClass="label-role"/>

        <ChoiceBox fx:id="choiceRole" styleClass="choice-role">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Manager"/>
                    <String fx:value="Staff"/>
                </FXCollections>
            </items>
        </ChoiceBox>
    </HBox>

    <!-- NÚT -->
    <HBox alignment="CENTER" spacing="12">
        <Button fx:id="btnRegister"
                text="%re.re"
                styleClass="btn-register"
                onAction="#handleRegister"/>

        <Button fx:id="btnCancel"
                text="%re.cancel"
                styleClass="btn-cancel"
                onAction="#handleCancel"/>
    </HBox>

    <!-- THÔNG BÁO -->
    <Label fx:id="lblMessage"
           text=""
           alignment="CENTER"
           maxWidth="260"
           wrapText="true"
           styleClass="message-label"/>

</VBox>
