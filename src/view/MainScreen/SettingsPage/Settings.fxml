<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" styleClass="root-container"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.MainScreen.SettingsPage.SettingsController">

    <left>
        <VBox prefHeight="756.0" prefWidth="220.0" spacing="8.0" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20"/>
            </padding>

            <Label maxWidth="Infinity" styleClass="app-logo" text="COFFEE POS"/>
            <Separator opacity="0.1"/>
            <Region prefHeight="20.0"/>

            <Button maxWidth="Infinity" onAction="#mainScreen"
                    styleClass="nav-btn"
                    text="%menu.sell"/>

            <Button maxWidth="Infinity" onAction="#menuManager"
                    styleClass="nav-btn"
                    text="%menu.manage"/>

            <Button maxWidth="Infinity"
                    styleClass="nav-btn, active-nav"
                    text="%menu.setting"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Button maxWidth="Infinity"
                    styleClass="nav-btn"
                    text="%menu.logout"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" styleClass="main-scroll">
            <content>
                <VBox spacing="30.0" styleClass="center-background">
                    <padding>
                        <Insets bottom="40" left="50" right="50" top="40"/>
                    </padding>

                    <VBox spacing="5">
                        <Label styleClass="page-title" text="%setting.title"/>
                        <Label styleClass="page-subtitle" text="%setting.subtitle"/>
                    </VBox>

                    <HBox alignment="TOP_LEFT" spacing="30.0">

                        <!-- Appearance -->
                        <VBox prefWidth="420.0" styleClass="setting-card" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="25" left="25" right="25" top="25"/>
                            </padding>

                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Label styleClass="icon-container" text="ðŸŽ¨"/>
                                <VBox>
                                    <Label styleClass="card-title" text="%setting.cardtitle"/>
                                    <Label styleClass="card-desc" text="%setting.carddesc"/>
                                </VBox>
                            </HBox>

                            <Separator styleClass="card-separator"/>

                            <VBox spacing="20">
                                <VBox styleClass="input-group">
                                    <Label styleClass="input-label" text="%setting.language"/>
                                    <ComboBox fx:id="languageComboBox"
                                              maxWidth="Infinity"
                                              styleClass="modern-combo"/>
                                </VBox>

                                <HBox alignment="CENTER_LEFT" styleClass="toggle-row">
                                    <VBox>
                                        <Label styleClass="input-label" text="%setting.darktheme"/>
                                        <Label styleClass="input-hint" text="%setting.notice"/>
                                    </VBox>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <CheckBox fx:id="darkModeToggle"
                                              onAction="#handleDarkModeToggle"
                                              styleClass="ios-toggle"/>
                                </HBox>
                            </VBox>
                        </VBox>

                        <!-- Security -->
                        <VBox prefWidth="420.0" styleClass="setting-card" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="25" left="25" right="25" top="25"/>
                            </padding>

                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Label styleClass="icon-container"
                                       style="-fx-background-color: #ECFDF5; -fx-text-fill: #059669;"
                                       text="ðŸ›¡ï¸"/>
                                <VBox>
                                    <Label styleClass="card-title" text="%setting.security"/>
                                    <Label styleClass="card-desc" text="%setting.securitytext"/>
                                </VBox>
                            </HBox>

                            <Separator styleClass="card-separator"/>

                            <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
                                <Region VBox.vgrow="ALWAYS"/>
                                <Label style="-fx-font-size: 60px; -fx-opacity: 0.8;" text="ðŸ”’"/>
                                <Label styleClass="input-hint" text="%setting.securitystt"/>
                                <Button maxWidth="Infinity"
                                        onAction="#openChangePasswordModal"
                                        styleClass="btn-primary"
                                        text="%setting.change"/>
                                <Region VBox.vgrow="ALWAYS"/>
                            </VBox>
                        </VBox>

                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
