<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root-container" stylesheets="@Settings.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainScreen.SettingsPage.SettingsController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="15.0" styleClass="header">
            <padding><Insets left="30" right="30" /></padding>
            <Button onAction="#goBack" styleClass="btn-back" text="â®" />
            <VBox alignment="CENTER_LEFT">
                <Label styleClass="header-title" text="%setting.title" />
                <Label styleClass="header-subtitle" text="%setting.subtitle" />
            </VBox>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="30.0" styleClass="body-container">
            <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>

            <VBox prefWidth="400.0" styleClass="card">
                <Label styleClass="card-title" text="%setting.cardtitle" />
                <Label styleClass="card-desc" text="%setting.carddesc" />
                <Region prefHeight="20" />

                <VBox styleClass="input-group">
                    <Label styleClass="input-label" text="%setting.language" />
                    <ComboBox fx:id="languageComboBox" maxWidth="Infinity" styleClass="custom-combo" />
                </VBox>
                <Region prefHeight="20" />

                <HBox alignment="CENTER_LEFT" styleClass="toggle-container">
                    <VBox>
                        <Label styleClass="input-label" text="%setting.darktheme" />
                        <Label styleClass="input-hint" text="%setting.notice" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <CheckBox fx:id="darkModeToggle" onAction="#handleDarkModeToggle" styleClass="toggle-switch" />
                </HBox>
            </VBox>

            <VBox prefWidth="400.0" styleClass="card">
                <Label styleClass="card-title" text="%setting.security" />
                <Label styleClass="card-desc" text="%setting.securitytext" />
                <Region prefHeight="40" />

                <VBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-size: 48px;" text="ðŸ›¡ï¸" />
                    <Label style="-fx-text-fill: #64748b; -fx-text-alignment: CENTER;" text="%setting.securitystt" />

                    <Button maxWidth="Infinity" onAction="#openChangePasswordModal" styleClass="btn-primary" text="%setting.change" />
                </VBox>
            </VBox>

        </HBox>
    </center>
</BorderPane>