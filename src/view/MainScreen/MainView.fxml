<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="view.MainScreen.MainController">

    <!-- LEFT -->
    <left>
        <VBox fx:id="sidebarBox"
              prefWidth="220"
              spacing="8"
              styleClass="sidebar"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <children>
                <Label maxWidth="Infinity"
                       styleClass="app-logo"
                       text="%menu.pos"/>

                <Separator opacity="0.1"/>
                <Region prefHeight="20"/>

                <Button maxWidth="Infinity"
                        styleClass="nav-btn, active-nav"
                        text="%menu.sell"/>

                <Button maxWidth="Infinity"
                        onAction="#menuManager"
                        styleClass="nav-btn"
                        text="%menu.manage"/>

                <Button maxWidth="Infinity"
                        onAction="#openSettings"
                        styleClass="nav-btn"
                        text="%menu.setting"/>

                <Region VBox.vgrow="ALWAYS"/>

                <Button maxWidth="Infinity"
                        onAction="#logout"
                        styleClass="nav-btn"
                        text="%menu.logout"/>
            </children>
        </VBox>
    </left>

    <!-- CENTER -->
    <center>
        <VBox spacing="20"
              styleClass="center-background"
              prefWidth="700">
            <padding>
                <Insets top="25" right="25" bottom="20" left="25"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox>
                    <Label styleClass="header-title"
                           style="-fx-font-size: 24px; -fx-font-weight: bold;"
                           text="%menu.title"/>

                    <Label fx:id="dateLabel"
                           style="-fx-text-fill: #9ca3af;"
                           text="%menu.date"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="searchField"
                           prefHeight="45"
                           prefWidth="300"
                           promptText="%menu.search"
                           styleClass="search-bar"/>
            </HBox>

            <HBox spacing="15">
                <Button onAction="#filterAll"
                        styleClass="filter-btn"
                        text="%menu.filter.all"/>

                <Button onAction="#filterDrink"
                        styleClass="filter-btn"
                        text="%menu.filter.drink"/>

                <Button onAction="#filterFood"
                        styleClass="filter-btn"
                        text="%menu.filter.food"/>
            </HBox>

            <ScrollPane fitToWidth="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        style="-fx-background-color: transparent;"
                        VBox.vgrow="ALWAYS">
                <content>
                    <FlowPane fx:id="menuGrid"
                              hgap="20"
                              vgap="20"
                              styleClass="menu-grid"/>
                </content>
            </ScrollPane>
        </VBox>
    </center>

    <!-- RIGHT -->
    <right>
        <VBox prefWidth="380"
              spacing="15"
              styleClass="right-pane-light">
            <padding>
                <Insets top="25" right="20" bottom="25" left="20"/>
            </padding>

            <Label styleClass="section-title"
                   text="%menu.currento"/>

            <Separator/>

            <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colName"
                                 prefWidth="160"
                                 text="%menu.dish"/>

                    <TableColumn fx:id="colQty"
                                 prefWidth="50"
                                 style="-fx-alignment: CENTER;"
                                 text="SL"/>

                    <TableColumn fx:id="colTotal"
                                 prefWidth="110"
                                 style="-fx-alignment: CENTER-RIGHT;"
                                 text="%menu.money"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="☕"
                               style="-fx-font-size: 40px; -fx-text-fill: #CBD5E1;"/>
                        <Label text="%menu.warning"
                               style="-fx-text-fill: #94A3B8; -fx-font-size: 14px;"/>
                    </VBox>
                </placeholder>
            </TableView>

            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0;">
                <Button onAction="#handleRemoveItem"
                        styleClass="danger-btn"
                        text="%menu.delete"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button onAction="#handleDecreaseQty"
                        styleClass="qty-btn"
                        text="-"/>

                <Button onAction="#handleIncreaseQty"
                        styleClass="qty-btn"
                        text="+"/>
            </HBox>

            <Separator/>

            <VBox spacing="10">
                <HBox>
                    <Label styleClass="total-label"
                           text="%menu.total01"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="subTotalLabel"
                           styleClass="total-label"
                           text="0 đ"/>
                </HBox>

                <HBox>
                    <Label styleClass="total-label"
                           text="%menu.giamgia"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label styleClass="total-label"
                           text="0 đ"/>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <Label text="%menu.total02"
                           style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalLabel"
                           styleClass="total-price"
                           text="0 đ"/>
                </HBox>
            </VBox>

            <Button maxWidth="Infinity"
                    prefHeight="55"
                    onAction="#handleCheckout"
                    styleClass="checkout-btn"
                    text="%menu.pay"/>
        </VBox>
    </right>

</BorderPane>
